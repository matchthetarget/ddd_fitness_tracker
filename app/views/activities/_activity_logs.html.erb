<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Logs

    <a data-toggle="collapse" href="#activity_logs_new_form">
      Add log
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @activity.logs.each do |log| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to log, log %>

        <%= link_to log, method: :delete, data: { confirm: "Do you really want to delete this log" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="activity_logs_new_form">
        <%= render partial: "activities/activity_logs_new_form" %>
      </div>
    </div>

  </ul>
</div>
