<% was_validated = log.errors.any? %>

<%= form_with(model: log, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% activity_class = "form-control" %>
    <% activity_was_invalid = log.errors.include?(:activity) %>

    <% if was_validated %>
      <% if activity_was_invalid %>
        <% activity_class << " is-invalid" %>
      <% else %>
        <% activity_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :activity_id %>
    <%= f.collection_select :activity_id, Activity.all, :id, :to_s, {}, class: "form-control" %>
    <% if activity_was_invalid %>
      <% log.errors.full_messages_for(:activity).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = log.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if user_was_invalid %>
      <% log.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% started_at_class = "form-control" %>
    <% started_at_was_invalid = log.errors.include?(:started_at) %>

    <% if was_validated %>
      <% if started_at_was_invalid %>
        <% started_at_class << " is-invalid" %>
      <% else %>
        <% started_at_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :started_at %>
    <%= f.datetime_select :started_at, class: started_at_class, placeholder: "Enter started at" %>
    <% if started_at_was_invalid %>
      <% log.errors.full_messages_for(:started_at).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
